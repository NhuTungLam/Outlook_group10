<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.DraftFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/nothingindraft"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/nothing_in_draft"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="150dp"
            >
        </ImageView>

        <TextView
            android:id="@+id/firstLineInDraft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nothing_in_draft"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/nothingindraft"
            android:fontFamily="@font/abadi_mt_bold"
            >
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start_writing"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/firstLineInDraft"
            android:layout_marginTop="10dp"
            >
        </TextView>
    </RelativeLayout>

</FrameLayout>